<title>Profile: <%= @user.name %> | HackerNewsClone</title>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<table <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
    <tr class='athing'><td valign="top">user:</td><td><%= f.text_field :name, autofocus: true, autocomplete: "name", size: "60x10"  %></td></tr>
    <tr><td valign="top">created:</td><td><%= time_ago_in_words( @user.created_at) %> ago.</td></tr>
    <tr><td valign="top">karma:</td><td><%=@user.karma%></td></tr>
    <tr><td valign="top">about:</td><td><%= f.text_area :about, autocomplete: "about", size: "60x10" %></td></tr>
    <tr><td valign="top">email:</td><td><%=@user.email%></td></tr>
    <tr><td valign="top">apiKey:</td><td><%=@user.apiKey%></td></tr>
    <tr><td></td><td valign="top"><a href= "/submissions?user_id=<%=@user.id%>" > <u>submissions</u></a></td></tr>
    <tr><td></td><td valign="top"><a href= "/thread" > <u>comments</u></a></td></tr>
    <tr><td></td><td valign="top"><a href= "/upvotedsubmissions?user_id=<%=@user.id%>"> <u>Upvoted submissions</u></a> / <a href= "/upvotedcomments?user_id=<%=@user.id%>" ><u>comments</u></a> <span style="font-style:italic">(private)</span></td></tr>
</table>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
    