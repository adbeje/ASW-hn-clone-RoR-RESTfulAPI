<p id="notice"><%= notice %></p>
  <ol class="inline gap">
    <% if @comments.empty? %>
        <p>There are no comments yet</p>
    <% else %>
        <% @comments.reverse_order.each do |comment| %>
              <div>
                <small>
                  <% if (current_user != nil) && (current_user.liked? comment) %> 
                  <% else %> <%= link_to 'â–²', like_comment_path(comment.id), method: :get%> <% end %>
                  by                   
                  <% if (current_user != nil) && (current_user == comment.user)%>
                    <a> <%= link_to comment.user.name, edit_user_registration_path %></a>
                  <%else%>
                    <a> <%= link_to comment.user.name, "user?id=" + (comment.user_id).to_s %></a>
                  <%end%>
                  <%= time_ago_in_words(comment.created_at) %> ago
                  <% if (current_user != nil) && (current_user.liked? comment) %>
                    |
                    <%= link_to 'unlike', unlike_comment_path(comment.id), method: :get%>
                  <%end%>
                  |
                  <a href="/contribucions/<%= comment.contribucion_id %>"> parent </a> 
                  |
                  <a href="/comments/<%= comment.id %>/edit"> edit </a> 
                  |
                  <a><%= link_to 'delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></a> 
                  | on:
                  <a href="/contribucions/<%= comment.contribucion_id %>"> <%= comment.contribucion.title %></a>
                </small>
              </div>
              <div>
                <div class="pad-comment">
                  <%= comment.content %>
                  <br></br>
                </div>
              </div>
        <% end %>
    <%end%>
  </ol>