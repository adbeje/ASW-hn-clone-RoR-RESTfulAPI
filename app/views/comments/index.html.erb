<p id="notice"><%= notice %></p>
  <ol class="inline gap">
    <h3>Comments</h3>

    <% if @comments.empty? %>
        <p>There are no comments yet</p>
    <% else %>
        <% @comments.reverse_order.each do |comment| %>
            <div>
              <small><%= link_to comment_path (comment), method: :put do %>
                    â–²
                <% end %> <a href="/users/<%= comment.user_id %>"> </a>
                <%= time_ago_in_words(comment.created_at) %>
                |<a href="/contribucions/<%= comment.contribucion_id %>">
              </a> 
              </small>
            </div>
            <div>
              <div class="pad-comment">
                <%= comment.content %>
              </div>
            </div>
        <% end %>
    <%end%>
  </ol>