<table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
<% x=0 %>


  <tbody>
    
    <% @contribucions.each do |contribucion| %>
    
     <% if contribucion.tipus == "ask" %>
    
        <% x+=1 %>
          <tr>
            <tr class="athing">
            <td class="title" valign="top" align="right"><span class="rank"><%= x %><a>.</a></span></td> 
            <td class="title"> 
              <% if (current_user != nil) && (current_user.liked? contribucion) %>&nbsp;&nbsp;
              <% else %><%= link_to 'â–²', like_contribucion_path(contribucion.id), method: :get%><% end %>
              <a  href="/contribucions/<%= contribucion.id %>" class="storylink"><%=contribucion.title%></a>
